<%= form_for @product do |f| -%>
<%= render :partial => 'entry', :locals => {:f => f} -%>
<div class="buttons">
	<%= f.submit "Update", :class => "button" -%>
	<input type="button" value="Cancel" onclick='window.location = "<%= products_path -%>"' class="button" />
	<%= link_to "Delete", product_path(@product), :method => :delete, :confirm => "Are you sure you want to delete this product?" -%>
</div>
<%- end -%>

<% content_for :page_js do -%>
	<%= javascript_include_tag :jquery_ujs -%>
<% end -%>