<%- if audit.errors.count > 0 -%>
<div id="error_explanation">
	<div class="panel panel-danger">
		<div class="panel-heading"><span class="h3">Attention</span></div>
		<div class="panel-body">
			<ul>
				<% audit.errors.messages.each do |key, msgs| 
					msgs.each do |msg_text| -%>
						<li><%= msg_text -%></li>
				 <%-end 
				 end -%>
			</ul>
		</div>
	</div>
</div>
<% end -%>

<div id="page_loaded" class="col-md-12 col-sm-12 col-xs-12 text-center" style="margin: 1em auto">
	<h2><i class="fa fa-circle-o-notch fa-spin"></i></h2>
</div>
<%= form_for audit, data: {"ng-app" => "audit"}, role: "form" do |f| -%>
	<div class="row ng-cloak" style="margin-bottom: 0.5em" data-ng-hide="show_store_search">
		<%= f.submit "Save", :disable_with => 'Saving...', class: "btn btn-primary btn-wide", data: {"ng-disabled" => "audit_store_id == null || show_store_search"} -%>
		
		<%= link_to "Cancel", audit_path(audit), class: "btn btn-default" -%>
	</div>

	<%= render :partial => "entry", :locals => {audit: audit, f: f} -%>

	<div class="row ng-cloak" style="margin-bottom: 0.5em" data-ng-hide="show_store_search">
		<%= f.submit "Save", :disable_with => 'Saving...', class: "btn btn-primary btn-wide", data: {"ng-disabled" => "audit_store_id == null || show_store_search"} -%>
		
		<%= link_to "Cancel", audit_path(audit), class: "btn btn-default" -%>
	</div>
<%- end -%>

<%- content_for :page_js do -%>
	<%= javascript_include_tag :jquery_ujs, :cache => true %>
<% end -%>

