
<div class="row" style="margin-bottom: 0.5em">
	<%= link_to "Add a New Store", new_store_path, class: "btn btn-primary" -%>	
</div>
<div class="row">
	<%= render :partial => 'stores/store_search', :locals => {:search_label => "Search for a store"} %>
</div>



<table id="company_listing" class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>Company</th>
			<th>Stores</th>
		</tr>
	</thead>
	<tbody>
		<% companies.each do |company| %>
		<tr>
			<td><%= link_to company[:name], company_path( company, :format => :html ) %></td>
			<td class="cell-right-align"><%= link_to number_with_delimiter(company.stores.size), company_stores_path( company, :format=> :html ) %></td>
		</tr>
		<% end %>
	</tbody>
</table>