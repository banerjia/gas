<% content_for :page_js do %>
	<% if !stores.nil? then %>
	<script type="text/javascript">
		var ajax_path = '<%= ajax_path.html_safe %>';
	</script>
	<% end %>
<% end  %>
<% content_for :head do %>
	<%= stylesheet_link_tag "table" %>
	<%= stylesheet_link_tag "forms" %>
	<style type="text/css" media="screen">
		div#page_body {text-align:center;}
		div#sub_container {
			margin: 0 auto;
			text-align: left;
			width:70%;
		}
		table.listing{
			border-bottom:none;
		}
		input#q{
			width:30em;
		}
	</style>
<% end %>
<% content_for :left_column do %>
	<h2>Links</h2>
	<ul class="nav_items">
		<% if defined?(options) && !options[:company_id].nil?  then %>
		<li>
				<%= link_to "About " + stores[0].company.name, company_path(options[:company_id]) %>
		</li>		
		<% end %>
	</ul>
<% end %>
<%= render :partial => 'store_search', :locals => {:options => options} %>

<% if !stores.nil? then %>
	<%= render :partial => "stores", \
		:locals => {:store_collection =>  stores, :more_pages => more_pages}%>
<% else %>
	We were unable to locate any stores matching the criteria you provided. Please review the search criteria.
<% end %>
