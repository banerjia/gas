<!DOCTYPE html>
<html>
<head>
  <title><%=page_title%></title>
  <link href='http://fonts.googleapis.com/css?family=Nobile' rel='stylesheet' type='text/css'/>
  <%= stylesheet_link_tag "application"%>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  <style type="text/css" media="screen">
	p.error{background-image: url(<%= image_path("exclamation_32x32.png")%>);}
	p.warning{background-image: url(<%= image_path("warning_32x32.png")%>);}
	p.notice{background-image: url(<%= image_path("success_32x32.png")%> );}	
	p.information{background-image: url(<%= image_path("information_32x32.png")%>);}	
	ul.nav_items li.current {background-image:url(<%= image_path("current_16x16.png")%>);}
  </style>
  <%= yield :head %>
</head>
<body>
	<div id="wrapper">
		<div id="page_header" class="page_blocks">
			<h1><%=page_title %></h1>
		</div>
		<div id="page_body" class="page_blocks">
			<% if !flash[:notice].blank?%>
				<p class="notice"><%= flash[:notice]%></p>
			<% end %>
			<% if !flash[:warning].blank? %>
				<p class="error"><%=flash[:warning]%></p>
			<% end %>
			<%= yield :body %>
		</div>
	</div>
</body>
</html>
