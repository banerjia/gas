<!DOCTYPE html>
<html> 
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Graeter's App > <%= @page_title or "Untitled" %></title>
		<%= stylesheet_link_tag "application"%>
		<%= csrf_meta_tags %>
		<style type="text/css" media="screen">
			p.error{background-image: url(<%= image_path("error_24x24.png")%>);}
			p.warning{background-image: url(<%= image_path("warning_24x24.png")%>);}
			p.notice{background-image: url(<%= image_path("success_24x24.png")%> );}	
			.information{background-image: url(<%= image_path("information_32x32.png")%>);}	
			ul.nav_items li.current {background-image:url(<%= image_path("current_16x16.png")%>);}
		</style>
		<%= yield :head %>
	</head>
	<body>
		<div id="wrapper">
			<%= branch_info unless Rails.env.production?-%>
			<header>
			<div id="page_header" class="page_blocks">
				<p style="margin:0;margin-bottom:2px;font-size:9pt;font-weight:bold;text-align:right">Beta</p>

				<!-- TITLE -->
				<h1 style="margin-top:1px"><%= @page_title || "Untitled" %></h1>

				<%- if (defined?(current_user) && current_user) || true -%>
					<!-- Display top nav after login -->
					<div id="top_nav">
						<ul>
							<li <%= current_page?(companies_path) ? raw("class='current'"): "" -%>>
							<%=link_to_unless_current "Chains", companies_path -%>
							</li>
							<li <%= current_page?(orders_search_path) ? raw("class='current'"): "" -%>>
							<%=link_to_unless_current "Orders", orders_search_path -%>
							</li>
							<%- if true #current_user.is_admin  %>
								<li <%= current_page?(products_path) ? raw("class='current'"):"" -%>>
								<%= link_to_unless_current "Products", products_path -%>
								</li>
							<%- end -%>
							<%- if defined?(current_user) -%>	
								<li><%= link_to "Signout", logout_path %></li>
							<%- end -%>	
						</ul>
					</div>
					<!-- End top nav -->
				<%- end -%>
			</div>
			</header>
			<div id="page_body" class="page_blocks">
				<!-- NOTICES -->
				<% if !flash[:notice].blank?%>
					<p class="notice"><%= flash[:notice]%></p>
				<% end %>
				<% if !flash[:warning].blank? %>
					<p class="warning"><%=flash[:warning]%></p>
				<% end %>
				<% if !flash[:error].blank? %>
					<p class="error"><%=flash[:error]%></p>
				<% end %>
				<!-- END NOTICES -->

				<%= content_for?(:body) ? yield(:body) : yield -%>
			</div>
			<footer>
				<div id="page_footer" class="page_blocks">
						<p>Site developed by Tagore Town LLC. for Graeters Inc.</p>
						<p>&copy; Copyright reserved <%= Date.today.year -%>.</p>
				</div>
			</footer>
		</div>
		<div style="display:none">
			<%- if RAILS_ENV == 'production' -%>
			  <script>
			    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			    ga('create', '<%=ENV['google_analytics_id']-%>', 'auto');
			    ga('send', 'pageview');

			  </script>
			 <%- end -%>
			
			<%= javascript_include_tag :application -%>
			 
			 <script type="text/javascript">	
				 $(document).ready(function(){			
						 var min_height = Math.max( $("div#right_column").height(), $("div#left_column").height());
						 $("div#right_column, div#left_column").css("min-height", min_height+"px");
						 });
			 </script>

			 <%= yield :page_js %>
	 </div>
 </body>
</html>
